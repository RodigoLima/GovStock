{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Koa with Nodemon",
        "runtimeExecutable": "nodemon",
        "program": "server.js",
        "cwd": "${workspaceFolder}/api",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "env": {
          "NODE_ENV": "development"
        },
        "runtimeArgs": [
          "--inspect"
        ],
        "outFiles": [
          "${workspaceFolder}/**/*.js"
        ]
      }
    ]
  }
  